<Window x:Class="Lintree.View.InfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About Lintree 3D Plant Generator"
        Height="200" Width="230"
        Background="{StaticResource dark_AppBackground}">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <StackPanel Margin="10,0">
                <Label Content="Lintree 3D" Uid="Info_ProgramTitleLabel"
                       Style="{StaticResource infoWindow_AppTitleLabelStyle}"/>
                <Label Content="Plant Generator" Uid="Info_ProgramSubtitleLabel"
                       Style="{StaticResource infoWindow_AppSubtitleLabelStyle}"/>
            </StackPanel>
            <Label Content="v 1.0" Uid="Info_ProgramVersionLabel"
                   Style="{StaticResource infoWindow_AppVersionLabelStyle}"/>
        </StackPanel>
        
        <StackPanel Grid.Row="1" Margin="10,5">
            <Label Content="© 2015 Katarzyna Sosnowska" Uid="Info_CopywrightsLabel"/>
            <Label Content="All rights reserved." Uid="Info_RightsReservationLabel"
                   Margin="0,-10,0,0"/>
        </StackPanel>
        
        <Button Grid.Row="2" Content="Close" Uid="uni_CloseButtonText"
                Width="70" Margin="10"
                Click="CloseButt_Click"/>
    </Grid>
</Window>
